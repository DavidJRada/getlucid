    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Get Lucid</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.css">
   

    <% if (sleepStatus === 'w') {%>
    <link href="../wake.css" rel="stylesheet">

    <%} else {%>

    <link href="../sleep.css" rel="stylesheet">

    <%}%>

 </head>
    <body>
 <% include ../partials/nav.ejs%>

    <a class='waves-effect waves-light btn' href="/dreamjournal/new/<%=sleepStatus%>">Add New Dream</a>

    <br>

    <div class='container wrapper'>
        <%for(let i=0; i<dreams.length; i++) { %>
        <div class='card'>
                <a href='/dreamjournal/show/<%=dreams[i].id%>/<%=sleepStatus%>'> <%=dreams[i].title%></a>
                <p><%=dreams[i].content%></p>
                <p>Tags: <%=dreams[i].tags%></p>
            
        <form action="/dreamjournal/delete/<%=sleepStatus%>/<%=dreams[i]._id%>?_method=DELETE" method="POST">
        <input type='submit' name='delete' value='Delete'/>
         </form>


        <a href="/dreamjournal/<%=dreams[i]._id; %>/<%=sleepStatus%>/edit"><button>Edit</button></a>

        </div>

        <%} %>
    </div>
    </body>
</html>